@using Microsoft.SharePoint.Client;
@{
    ViewBag.Title = "Home Page";
}
<head>
    <script src="https://appsforoffice.microsoft.com/lib/1/hosted/office.js" type="text/javascript"></script>

    <script type="text/javascript">
        Office.initialize = function () {};
        

    </script>
</head>
<div class="jumbotron">
    <h2>Welcome @ViewBag.UserName!</h2>
    <p class="lead"><b>SharePoint Add-ins - </b>Embracing web standards, the new cloud add-in model gives you maximum choice and flexibility to build a new class of SharePoint Add-ins using familiar languages, tools, and hosting services.</p>
    <p><a href="https://dev.office.com" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-4">

            @{
            foreach (List item in ViewBag.Alllists)
            {
            <div class="boxForListItem" onclick="window.location = '/Home/ShowListItems/?listid=@item.Id&SPHostUrl=@ViewBag.spHost'">
                @Html.DisplayName(item.Title)
            </div>
            
             };
            }




    </div>
</div>
